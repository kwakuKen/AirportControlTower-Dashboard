@{
    Layout = "_AdminLayout";
    ViewData["Title"] = "Aircraft List";
}
@model AircraftListViewModel[]

<div class="d-flex">
    <!-- Sidebar -->
    <div class="bg-dark text-white p-3" style="width: 250px; min-height: 100vh;">
        <h4 class="mb-4">Menu</h4>
        <ul class="nav flex-column">
            <li class="nav-item mb-2">
                <a href="/Home/Dashboard" class="nav-link text-white">Dashboard</a>
            </li>
            <li class="nav-item mb-2">
                <a href="/Home/AircraftList" class="nav-link text-white">Aircraft List</a>
            </li>
            <li class="nav-item">
                <a href="/Home/HistoricalLogs" class="nav-link text-white">Historical Logs</a>
            </li>
        </ul>
    </div>

    <!-- Main Content -->
    <div class="container mt-4 flex-grow-1">
        <h2 class="mb-4">Aircraft Contact Log</h2>
        <table class="table table-striped table-bordered">
            <thead class="table-dark">
                <tr>
                    <th>Type</th>
                    <th>Call Sign</th>
                    <th>State</th>
                    <th>Logitude</th>
                    <th>Latitude</th>
                    <th>Altitude</th>
                    <th>Heading</th>
                    <th>Created At</th>
                </tr>
            </thead>
            <tbody>
                @{
                    if (Model != null && Model.Any())
                    {
                        foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.type</td>
                                <td>@item.callSign</td>
                                <td>@item.state</td>
                                <td>@item.longitude</td>
                                <td>@item.latitude</td>
                                <td>@item.altitude</td>
                                <td>@item.heading</td>
                                <td>@item.createdAt.ToString("yyyy-MM-dd HH:mm:ss")</td>
                            </tr>
                        }
                    }
                    else
                    {
                        <tr>
                            <td colspan="8" align="center">
                                <p class="text-danger">No data found at the moment.</p>
                            </td>
                        </tr>
                    }

                }
            </tbody>
        </table>
    </div>
</div>

